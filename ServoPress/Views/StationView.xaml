<UserControl x:Class="ServoPress.Views.StationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:viewmodels="clr-namespace:ServoPress.ViewModels"
             xmlns:converters="clr-namespace:ServoPress.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600"
             d:DataContext="{d:DesignInstance Type=viewmodels:StationViewModel, IsDesignTimeCreatable=True}">

    <!-- 
    单个工位的主布局
    Row 0: 曲线
    Row 1: 选项卡 (过程值, 统计, Unibox)
    -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- 图表区 -->
            <RowDefinition Height="Auto"/>
            <!-- 选项卡区 -->
        </Grid.RowDefinitions>

        <!-- 1. 图表区域 -->
        <Border Grid.Row="0" BorderBrush="#FFD0D0D0" BorderThickness="1" Background="#FFFAFAFA" Margin="5" CornerRadius="4">
            <Grid>
                <!-- OxyPlot 曲线控件 -->
                <oxy:PlotView Model="{Binding PlotModel}" />

                <!-- 
                工位名称 TextBlock 已移除，
                标题现在由 PlotModel.Title (在 ViewModel 中设置) 控制
                -->
            </Grid>
        </Border>

        <!-- 2. 数据和控制区域 -->
        <Grid Grid.Row="1" Margin="5,0,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- 判定、统计、参数 -->
            </Grid.ColumnDefinitions>

            <!-- 2.1 选项卡区域 -->
            <TabControl MinHeight="200">

                <!-- 过程值与判定 (保留) -->
                <TabItem Header="过程值">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid ItemsSource="{Binding ProcessValues}" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="值" Binding="{Binding Value}" Width="*"/>
                                <DataGridTextColumn Header="单位" Binding="{Binding Unit}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- 最终判定结果 -->
                        <Border Grid.Column="1" 
                                Background="{Binding ResultBrush}" 
                                CornerRadius="4" 
                                Margin="10,0,0,0" 
                                MinWidth="100"
                                VerticalAlignment="Stretch">
                            <TextBlock Text="{Binding Result}" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="White"/>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- 计数统计 (保留) -->
                <TabItem Header="统计">
                    <GroupBox Header="计数统计" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="合格" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" FontSize="14"/>
                            <TextBlock Text="{Binding OkCount}" Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Yield, StringFormat={}{0:F2}%}" Grid.Row="0" Grid.Column="2" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14"/>

                            <TextBlock Text="不合格" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" FontSize="14"/>
                            <TextBlock Text="{Binding NokCount}" Grid.Row="1" Grid.Column="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14" FontWeight="Bold" Foreground="#FFD9534F"/>
                            <!-- 
                                合格率只显示在"合格"行，"不合格"行显示"-"
                            -->
                            <TextBlock Text="-" Grid.Row="1" Grid.Column="2" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14" Foreground="#FFD9534F"/>

                            <TextBlock Text="总数" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center" FontSize="14"/>
                            <TextBlock Text="{Binding TotalCount}" Grid.Row="2" Grid.Column="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14" FontWeight="Bold"/>
                            <Button Content="计数清零" Grid.Row="2" Grid.Column="2" Margin="5" Padding="10,3" HorizontalAlignment="Right" Style="{StaticResource ResetButtonStyle}" Command="{Binding ClearCountCommand}"/>
                        </Grid>
                    </GroupBox>
                </TabItem>

                <!-- 参数设置 -> 改名为 "Unibox" -->
                <TabItem Header="Unibox">
                    <Grid Margin="5">
                        <!-- 
                        此 Grid 绑定到 ViewModel 中的 UniboxSettings 属性
                        -->
                        <Grid DataContext="{Binding UniboxSettings}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 0: 进入/退出 方向 -->
                            <TextBlock Text="进入方向:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" Margin="5"
                                      ItemsSource="{Binding DataContext.EntryDirectionsOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding EntryDirection}"/>

                            <TextBlock Text="退出方向:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="5"/>
                            <ComboBox Grid.Row="0" Grid.Column="3" Margin="5"
                                      ItemsSource="{Binding DataContext.ExitDirectionsOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding ExitDirection}"/>

                            <!-- Row 1: StartX / EndX -->
                            <TextBlock Text="StartX (mm):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding StartX, StringFormat={}{0:F2}}"/>
                            <TextBlock Text="EndX (mm):" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Grid.Row="1" Grid.Column="3" Margin="5" Text="{Binding EndX, StringFormat={}{0:F2}}"/>

                            <!-- Row 2: StartY / EndY -->
                            <TextBlock Text="StartY (KN):" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Text="{Binding StartY, StringFormat={}{0:F2}}"/>
                            <TextBlock Text="EndY (KN):" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Margin="5" Text="{Binding EndY, StringFormat={}{0:F2}}"/>

                            <!-- Row 3: 确认 / 重进入 (布局已调整) -->
                            <Button Content="确认" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" 
                                    Command="{Binding DataContext.ConfirmChangesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                            <CheckBox Content="允许重复进入" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" 
                                      VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,5"
                                      IsChecked="{Binding AllowReentry}"/>

                        </Grid>
                    </Grid>
                </TabItem>

            </TabControl>
        </Grid>
    </Grid>
</UserControl>