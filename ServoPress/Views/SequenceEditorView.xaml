<UserControl x:Class="ServoPress.Views.SequenceEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:models="clr-namespace:ServoPress.Models"
             xmlns:converters="clr-namespace:ServoPress.Converters" 
             xmlns:viewmodels="clr-namespace:ServoPress.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1050"
             d:DataContext="{d:DesignInstance Type=viewmodels:SequenceEditorViewModel}">
    <!-- 
    d:DataContext 为 XAML 设计器提供了示例数据
    xmlns:models 和 xmlns:viewmodels 是新添加的命名空间
     d:DataContext="{d:DesignInstance Type=viewmodels:SequenceEditorViewModel}
    -->

    <UserControl.Resources>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <!-- 样式: 左侧工具面板按钮 -->
        <Style x:Key="PaletteButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Padding" Value="10,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE0F0FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFC6E2FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 样式: 左侧工具面板图标 -->
        <Style x:Key="PaletteIconStyle" TargetType="svgc:SvgViewbox">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>

        <!-- 样式: 左侧工具面板文本 -->
        <Style x:Key="PaletteTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- 
        ====================================================================
        样式: 步骤详情 (第三列)
        ====================================================================
        -->

        <!-- 样式: 详情页的标题栏 (图标 + 文本) -->
        <Style x:Key="DetailHeaderPanel" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="5,5,0,15"/>
        </Style>
        <Style x:Key="DetailHeaderIconStyle" TargetType="svgc:SvgViewbox">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
        <Style x:Key="DetailHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 样式: 详情页的属性行 (标签 + 控件 + 单位) -->
        <Style x:Key="DetailPropertyRowGrid" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- 样式: 详情页的属性标签 (灰色背景) -->
        <Style x:Key="DetailPropertyLabel" TargetType="TextBlock">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- 样式: 详情页的单位文本 -->
        <Style x:Key="UnitTextBlock" TargetType="TextBlock">
            <Setter Property="Text" Value="mm"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Foreground" Value="#FF555555"/>
        </Style>

        <!-- 
        ====================================================================
        DataTemplates: 用于第三列的 ContentControl
        ====================================================================
        -->

        <!-- DataTemplate for MotionStep -->
        <DataTemplate DataType="{x:Type models:MotionStep}">
            <StackPanel>
                <StackPanel Style="{StaticResource DetailHeaderPanel}">
                    <svgc:SvgViewbox Style="{StaticResource DetailHeaderIconStyle}" Source="{Binding IconSource}"/>
                    <TextBlock Style="{StaticResource DetailHeaderTextStyle}" Text="{Binding StepType}"/>
                </StackPanel>

                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="描述"/>
                    <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="参考"/>
                    <ComboBox Grid.Column="1" Text="{Binding Reference}" VerticalAlignment="Center" Margin="5,0">
                        <ComboBoxItem Content="绝对位移"/>
                        <ComboBoxItem Content="相对位移"/>
                    </ComboBox>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="位置"/>
                    <TextBox Grid.Column="1" Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Grid.Column="2" Style="{StaticResource UnitTextBlock}" Text="mm"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="速度"/>
                    <TextBox Grid.Column="1" Text="{Binding Speed, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Grid.Column="2" Style="{StaticResource UnitTextBlock}" Text="mm/s"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="最大力"/>
                    <TextBox Grid.Column="1" Text="{Binding MaxForce, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Grid.Column="2" Style="{StaticResource UnitTextBlock}" Text="N"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="加速度"/>
                    <TextBox Grid.Column="1" Text="{Binding Acceleration, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="减速度"/>
                    <TextBox Grid.Column="1" Text="{Binding Deceleration, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <!-- DataTemplate for MeasureStep -->
        <DataTemplate DataType="{x:Type models:MeasureStep}">
            <StackPanel>
                <StackPanel Style="{StaticResource DetailHeaderPanel}">
                    <svgc:SvgViewbox Style="{StaticResource DetailHeaderIconStyle}" Source="{Binding IconSource}"/>
                    <TextBlock Style="{StaticResource DetailHeaderTextStyle}" Text="{Binding StepType}"/>
                </StackPanel>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="描述"/>
                    <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
                <GroupBox Header="测量" Margin="0,5">
                    <StackPanel>
                        <RadioButton Content="启动" GroupName="MeasureToggle" Margin="5"
                                     IsChecked="{Binding Mode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Start}"/>
                        <RadioButton Content="停止" GroupName="MeasureToggle" Margin="5"
                                     IsChecked="{Binding Mode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Stop}"/>
                    </StackPanel>
                </GroupBox>
                <Grid Style="{StaticResource DetailPropertyRowGrid}" Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="目标"/>
                    <ComboBox Grid.Column="1" Text="{Binding Target}" VerticalAlignment="Center" Margin="5,0">
                        <ComboBoxItem Content="TARGETRES_NONE"/>
                        <ComboBoxItem Content="TARGETRES_RAM"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
            <!-- 
            注意: EnumToBooleanConverter 是一个标准的转换器, 您需要自己添加到项目中.
            为简单起见, 您也可以只使用 ComboBox 来绑定 Enum.
            -->
        </DataTemplate>

        <!-- DataTemplate for TimerStep -->
        <DataTemplate DataType="{x:Type models:TimerStep}">
            <StackPanel>
                <StackPanel Style="{StaticResource DetailHeaderPanel}">
                    <svgc:SvgViewbox Style="{StaticResource DetailHeaderIconStyle}" Source="{Binding IconSource}"/>
                    <TextBlock Style="{StaticResource DetailHeaderTextStyle}" Text="{Binding StepType}"/>
                </StackPanel>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="描述"/>
                    <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="时间"/>
                    <TextBox Grid.Column="1" Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Grid.Column="2" Style="{StaticResource UnitTextBlock}" Text="毫秒"/>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <!-- DataTemplate for WaitStep -->
        <DataTemplate DataType="{x:Type models:WaitStep}">
            <StackPanel>
                <StackPanel Style="{StaticResource DetailHeaderPanel}">
                    <svgc:SvgViewbox Style="{StaticResource DetailHeaderIconStyle}" Source="{Binding IconSource}"/>
                    <TextBlock Style="{StaticResource DetailHeaderTextStyle}" Text="{Binding StepType}"/>
                </StackPanel>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="描述"/>
                    <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <!-- DataTemplate for LabelStep -->
        <DataTemplate DataType="{x:Type models:LabelStep}">
            <StackPanel>
                <StackPanel Style="{StaticResource DetailHeaderPanel}">
                    <svgc:SvgViewbox Style="{StaticResource DetailHeaderIconStyle}" Source="{Binding IconSource}"/>
                    <TextBlock Style="{StaticResource DetailHeaderTextStyle}" Text="{Binding StepType}"/>
                </StackPanel>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="描述"/>
                    <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="标签ID"/>
                    <!-- 假设 ID 是数字, 但显示为 ComboBox -->
                    <ComboBox Grid.Column="1" Text="{Binding LabelId}" VerticalAlignment="Center" Margin="5,0">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <!-- DataTemplate for JumpStep -->
        <DataTemplate DataType="{x:Type models:JumpStep}">
            <StackPanel>
                <StackPanel Style="{StaticResource DetailHeaderPanel}">
                    <svgc:SvgViewbox Style="{StaticResource DetailHeaderIconStyle}" Source="{Binding IconSource}"/>
                    <TextBlock Style="{StaticResource DetailHeaderTextStyle}" Text="{Binding StepType}"/>
                </StackPanel>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="描述"/>
                    <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="目标标签ID"/>
                    <ComboBox Grid.Column="1" Text="{Binding TargetLabelId}" VerticalAlignment="Center" Margin="5,0">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                    </ComboBox>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="计数"/>
                    <TextBox Grid.Column="1" Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <!-- DataTemplate for HomePositionStep -->
        <DataTemplate DataType="{x:Type models:HomePositionStep}">
            <StackPanel>
                <StackPanel Style="{StaticResource DetailHeaderPanel}">
                    <svgc:SvgViewbox Style="{StaticResource DetailHeaderIconStyle}" Source="{Binding IconSource}"/>
                    <TextBlock Style="{StaticResource DetailHeaderTextStyle}" Text="{Binding StepType}"/>
                </StackPanel>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="描述"/>
                    <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="参考"/>
                    <ComboBox Grid.Column="1" Text="{Binding Reference}" VerticalAlignment="Center" Margin="5,0">
                        <ComboBoxItem Content="绝对位移"/>
                        <ComboBoxItem Content="相对位移"/>
                    </ComboBox>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="位置"/>
                    <TextBox Grid.Column="1" Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Grid.Column="2" Style="{StaticResource UnitTextBlock}" Text="mm"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="速度"/>
                    <TextBox Grid.Column="1" Text="{Binding Speed, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Grid.Column="2" Style="{StaticResource UnitTextBlock}" Text="mm/s"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="最大力"/>
                    <TextBox Grid.Column="1" Text="{Binding MaxForce, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Grid.Column="2" Style="{StaticResource UnitTextBlock}" Text="N"/>
                </Grid>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="最小力"/>
                    <TextBox Grid.Column="1" Text="{Binding MinForce, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Grid.Column="2" Style="{StaticResource UnitTextBlock}" Text="N"/>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <!-- DataTemplate for EndStep -->
        <DataTemplate DataType="{x:Type models:EndStep}">
            <StackPanel>
                <StackPanel Style="{StaticResource DetailHeaderPanel}">
                    <svgc:SvgViewbox Style="{StaticResource DetailHeaderIconStyle}" Source="{Binding IconSource}"/>
                    <TextBlock Style="{StaticResource DetailHeaderTextStyle}" Text="{Binding StepType}"/>
                </StackPanel>
                <Grid Style="{StaticResource DetailPropertyRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource DetailPropertyLabel}" Text="描述"/>
                    <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="5,0"/>
                </Grid>
                <TextBlock Text="序列结束执行" Margin="10" FontSize="14" Foreground="Gray"/>
            </StackPanel>
        </DataTemplate>

        <!-- (新) ListView 步骤列表的模板 -->
        <DataTemplate x:Key="SequenceStepItemTemplate" DataType="{x:Type models:SequenceStep}">
            <Border BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="5,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- 步号 -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- 步名 -->
                        <ColumnDefinition Width="*"/>
                        <!-- 详情 -->
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding StepNumber}" FontSize="15" 
                               VerticalAlignment="Center" MinWidth="25" Margin="0,0,10,0" TextAlignment="Center"/>
                    <TextBlock Text="{Binding StepType}" Grid.Column="1" Margin="0,0,20,0"  FontSize="15"  TextAlignment="Center" />
                    <TextBlock Text="{Binding Summary}"  Grid.Column="2"  FontSize="15"  TextAlignment="Left"/>

                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- 0: 添加步骤 -->
            <ColumnDefinition Width="Auto"/>
            <!-- 1: 分隔条 -->
            <ColumnDefinition Width="1.5*"/>
            <!-- 2: 序列步骤列表 -->
            <ColumnDefinition Width="Auto"/>
            <!-- 3: 分隔条 -->
            <ColumnDefinition Width="1*"/>
            <!-- 4: 步骤详情编辑 -->
        </Grid.ColumnDefinitions>

        <!-- ==================================================================== -->
        <!-- 0: 添加步骤 (左侧工具面板) -->
        <!-- 修改: 按钮 Click 事件改为 Command 绑定 -->
        <!-- ==================================================================== -->
        <Border Grid.Column="0" Background="#FDFDFD" BorderBrush="#FFEEEEEE" BorderThickness="0,0,1,0">
            <GroupBox Header="添加步骤" Padding="5,10,5,5" BorderThickness="0">
                <StackPanel Orientation="Vertical">
                    <Button Style="{StaticResource PaletteButtonStyle}" Command="{Binding AddMotionStepCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/Motion.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="移动"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource PaletteButtonStyle}" Command="{Binding AddMeasureStepCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/Measure.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="测试"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource PaletteButtonStyle}" Command="{Binding AddTimeStepCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/TIMER.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="时间"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource PaletteButtonStyle}" Command="{Binding AddWaitStepCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/Wait.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="等待"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource PaletteButtonStyle}" Command="{Binding AddLabelStepCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/Label.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="标签"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource PaletteButtonStyle}" Command="{Binding AddJumpStepCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/Jump.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="跳转"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource PaletteButtonStyle}" Command="{Binding AddHomeStepCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/HomePosition.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="回原"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource PaletteButtonStyle}" Command="{Binding AddEndStepCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/SequenceEnd.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="结束"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </GroupBox>
        </Border>

        <!-- 1: 分隔条 -->
        <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#FFEEEEEE"/>

        <!-- ==================================================================== -->
        <!-- 2: 序列步骤列表 (中间) -->
        <!-- 修改: DataGrid -> ListView -->
        <!-- ==================================================================== -->
        <GroupBox Grid.Column="2">
            <GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="压装序列" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="程序号:" VerticalAlignment="Center"/>
                        <ComboBox Margin="5,0,0,0" Width="150" SelectedIndex="0" VerticalAlignment="Center">
                            <ComboBoxItem Content="MP101_PartA"/>
                            <ComboBoxItem Content="MP102_PartB"/>
                            <ComboBoxItem Content="MP200_Bearing"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </GroupBox.Header>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListView Grid.Row="0"
                          ItemsSource="{Binding SequenceSteps}"
                          SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                          ItemTemplate="{StaticResource SequenceStepItemTemplate}"
                          BorderThickness="0"
                          HorizontalContentAlignment="Stretch"/>

                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Style="{StaticResource PaletteButtonStyle}" Command="{Binding MoveStepUpCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/MoveUp.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="上移步骤"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="1" Style="{StaticResource PaletteButtonStyle}" Command="{Binding MoveStepDownCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/MoveDown.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="下移步骤"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="2" Style="{StaticResource PaletteButtonStyle}" Command="{Binding DeleteStepCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/Delete.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="删除步骤"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="3" Style="{StaticResource PaletteButtonStyle}" Command="{Binding SaveSequenceCommand}">
                        <StackPanel>
                            <svgc:SvgViewbox Style="{StaticResource PaletteIconStyle}" Source="/Resources/Icons/Save.svg"/>
                            <TextBlock Style="{StaticResource PaletteTextStyle}" Text="保存序列"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- 3: 分隔条 -->
        <GridSplitter Grid.Column="3" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#FFEEEEEE"/>

        <!-- ==================================================================== -->
        <!-- 4: 步骤详情编辑 (右侧) -->
        <!-- ContentControl -->
        <!-- ==================================================================== -->

        <!-- 
        - Content 绑定到 ViewModel 的 SelectedStep
        - 所有的 DataTemplate 都在 UserControl.Resources 中定义
        -->
        <ScrollViewer Grid.Column="4" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
            <ContentControl Content="{Binding SelectedStep}"/>
            <!-- 
            WPF 将会自动在 UserControl.Resources (或 Application.Resources)
            中查找与 SelectedStep 的 *类型* 匹配的 DataTemplate
            -->
        </ScrollViewer>

    </Grid>
</UserControl>